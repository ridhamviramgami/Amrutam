    <h4 style="text-align:center">Our Product</h4>
    <section id="product">
        <div class="product-container">
            <div class="product-card">
                <div class="sale-badge">Sale</div>
                <img src="~/Picture//Ghee.png" alt="A2 Gir Cow Ghee">
                <h3>Amrutam A2 Gir Cow Ghee</h3>
                <p class="rating">⭐⭐⭐⭐⭐ <span class="rating-score">4.8</span> (56)</p>
                <p class="price"><del>Rs. 1,299.00</del> <strong>From Rs. 1,050.00</strong></p>
                <button class="product-btn">Buy</button>
            </div>
        </div>
    </section>

    <section id="contact">
        <div class="contact-form-section">
            <h1>Contact Us</h1>
            <form id="contact-form" action="/submit-form" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" rows="4" required></textarea>
                </div>
                <button type="submit">Send Message</button>
            </form>
        </div>
    </section>


    <footer class="footer">
        <div class="footer-left">
            <img src="/Picture/Amritam_Logo_New.jpg.png" alt="Logo">
        </div>
        <div class="footer-text">
